{block head}
	<link href="{$basePath}/css/material-dashboard.css" rel="stylesheet"/>
	<link rel="stylesheet" href="{$basePath}/css/simple-line-icons.css">

	<link rel="stylesheet" href="{$basePath}/css/style.css">

	<link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
    <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>
{/block}

{block content}
<section>
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-8 col-md-offset-2 col-sm-12 col-lg-6 col-lg-offset-3">
				<div class="card card-nav-tabs">
					<div class="card-header" data-background-color="purple">
						<div class="nav-tabs-navigation">
							<div class="nav-tabs-wrapper">
								<span class="nav-tabs-title">Options:</span>
								<ul class="nav nav-tabs" data-tabs="tabs">
									<li class="active">
										<a href="#results" data-toggle="tab" aria-expanded="true">
											<i class="material-icons">view_list</i>
											Results
											<div class="ripple-container"></div></a>
									</li>
									<li class="">
										<a href="#statistics" data-toggle="tab" aria-expanded="false">
											<i class="material-icons">timeline</i>
											Statistics
											<div class="ripple-container"></div></a>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<div class="card-content">
						<div class="tab-content">
							<div class="tab-pane active" id="results">
								<ul class="result-details">
									<li>
										<p>What ever</p>
										<div>
											<span><i class="material-icons">watch_later</i> April 11, 2017</span>
											<span class="pull-right">#category 1, #category 2</span>
										</div>
									</li>
									<li>
										<p>Flooded: One year later, assessing what was lost and what was found when a ravaging rain swept through metro Detroit</p>
										<div>
											<span><i class="material-icons">watch_later</i> April 11, 2017</span>
											<span class="pull-right">#category 1, #category 2</span>
										</div>
									</li>
								</ul>
							</div>
							<div class="tab-pane" id="statistics">
								<div class="form-group">
									<label for="shareLink">Share link</label>
									<input type="text" id="shareLink" value="http://abc.sf/adsadsa/adsdsda/sdads" class="form-control" onClick="this.select();">
								</div>

								<h5 class="text-center">Social shares</h5>
								<div class="social-shares">
									<a href="#"><i class="fa fa-facebook-square fa-3x"></i></a>
									<a href="#"><i class="fa fa-twitter-square fa-3x"></i></a>
									<a href="#"><i class="fa fa-envelope fa-3x"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<footer>
		<div class="container">
				<p>&copy; 2016 Start Bootstrap. All Rights Reserved.</p>
				<ul class="list-inline">
						<li>
								<a href="#">Privacy</a>
						</li>
						<li>
								<a href="#">Terms</a>
						</li>
						<li>
								<a href="#">FAQ</a>
						</li>
				</ul>
		</div>
</footer>

{/block}

{block scripts}
	{include parent}
	<script src="{$basePath}/js/awesome-landing-page.js" type="text/javascript"></script>
{/block}
