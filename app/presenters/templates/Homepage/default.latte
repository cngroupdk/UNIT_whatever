{block head}
	<link href="{$basePath}/css/landing-page.css" rel="stylesheet"/>
	<link rel="stylesheet" href="{$basePath}/css/simple-line-icons.css">
	<link rel="stylesheet" href="{$basePath}/css/device-mockups.css">

	<link rel="stylesheet" type="text/css" href="{$basePath}/css/style.css" />
	<script src="{$basePath}/js/modernizr.custom.72111.js"></script>
	<style>
		.no-cssanimations .rw-wrapper .rw-sentence span:first-child{
			opacity: 1;
		}
	</style>
	<!--[if lt IE 9]>
	<style>
		.rw-wrapper{ display: none; }
		.rw-sentence-IE{ display: block;  }
	</style>
